            <!-- START: NEW, ROBUST QUANTITY SELECTOR HTML -->
            <div class="fpd-quantity-selector" data-quantity data-step="{{ quantity_step }}" data-min="{{ quantity_minimum }}">
                <button type="button" class="fpd-quantity-selector__button" data-qty-decrease aria-label="Decrease quantity">
