                <div class="fpd-flavor-swatches" data-swatches role="radiogroup" aria-labelledby="fpd-flavor-label-{{ section.id }}">
                  {% for variant in product.variants %}
                    {% assign is_selected = false %}
                    {% if variant.id == initial_variant.id %}
                      {% assign is_selected = true %}
                    {% endif %}
                    {% assign is_available = variant.available %}
                    <button type="button"
                            class="fpd-flavor-chip{% if is_selected %} is-selected{% endif %}"
