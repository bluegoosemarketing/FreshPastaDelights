    {% if product.metafields.custom.ingredients != blank or product.metafields.custom.allergens != blank %}
      <div class="fpd-accordion">
        <details>
          <summary>
            <span>Ingredients &amp; Allergens</span>
            <svg class="fpd-accordion__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" aria-hidden="true"><path d="M9 6l6 6-6 6"/></svg>
