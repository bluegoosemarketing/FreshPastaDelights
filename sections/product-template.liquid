            <!-- END: NEW, ROBUST QUANTITY SELECTOR HTML -->

            {% if product.tags contains 'per-lb' %}
              <p class="fpd-quantity-hint">Minimum order {{ quantity_minimum }} {{ weight_unit_hint }} · increments of {{ quantity_step }} {{ increment_unit_hint }}.</p>
            {% endif %}

            <button type="submit" class="fpd-add-to-cart" data-add-to-cart>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true"><path d="M3 3h3l1.7 9.5a2 2 0 0 0 2 1.6h7.9a2 2 0 0 0 2-1.6l1.1-6.5H6"/><path d="M10 21a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/><path d="M17 21a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/></svg>
              <span data-add-to-cart-text>{{ 'products.product.add_to_cart' | t }}</span>
              <span class="fpd-add-to-cart__confirmation" data-add-to-cart-confirmation aria-live="polite">Added!</span>
            </button>

            <div class="fpd-backorder" data-backorder hidden>
              <span data-backorder-message></span>
            </div>
          </form>

          <details class="fpd-social">
            <summary class="fpd-social__trigger">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" aria-hidden="true"><path d="M18 8a3 3 0 1 0-6 0 3 3 0 0 0 6 0z"/><path d="M9 12a3 3 0 1 0-6 0 3 3 0 0 0 6 0z"/><path d="M21 16a3 3 0 1 0-6 0 3 3 0 0 0 6 0z"/><path d="M7.3 11l3.4-1.5"/><path d="M13.3 9.5l3.4 1.5"/><path d="M13.3 14.5l3.4-1.5"/></svg>
              <span>{{ 'general.social.share' | t | default: 'Share' }}</span>
